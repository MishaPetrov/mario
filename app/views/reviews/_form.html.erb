<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :author %>
  <%= f.label :review %>
  <%= f.text_field :content_body %>
  <%= f.label :rating %>
  <%= f.select :rating, [ '1', '2', '3', '4', '5' ], :prompt => 'Select Rating' %>
  <p><%= f.submit %></p>
<% end %>
